<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.contacts.ContactsFragment">

    <!-- Section for the Primary Contact -->
    <TextView
        android:id="@+id/header_primary_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacts_primary_contact_header"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_primary_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_primary_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                tools:text="Police Department" />

            <TextView
                android:id="@+id/text_primary_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="911" />

            <TextView
                android:id="@+id/text_no_primary_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No primary contact set."
                android:visibility="gone"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_set_primary_contact"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/contacts_add_primary_button" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/listDivider" />

    <!-- Section for Priority Contacts -->
    <TextView
        android:id="@+id/header_priority_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacts_secondary_contacts_header"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <!-- This RecyclerView will display the list of priority contacts -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_contacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_contact" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add_priority_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/contacts_add_contact_button" />

</LinearLayout>